<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.genesis.patient.PatientActivity"
    android:background="@drawable/backsign"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"


    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="5dp"
            android:background="@drawable/backsign"
            android:layout_gravity="center"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerInParent="true"
                    android:src="#000"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/personimage"/>



            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:paddingRight="25dp"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="#ffffee"
                    android:id="@+id/personname"
                    android:textSize="22dp"/>

                <TextView
                    android:paddingRight="25dp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phn number"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffee"
                    android:id="@+id/personphone"
                    android:textSize="15dp"/>

                <TextView
                    android:paddingRight="25dp"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffee"
                    android:layout_height="wrap_content"
                    android:text="aachi.mec@gmail.com"
                    android:id="@+id/personemail"
                    android:textSize="12dp"/>

                <TextView
                    android:paddingRight="25dp"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffee"
                    android:layout_height="wrap_content"
                    android:text="B +ve"
                    android:id="@+id/personbloodgroup"
                    android:textSize="12dp"/>


                <TextView
                    android:paddingRight="25dp"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffee"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/persongender"
                    android:textSize="12dp"/>



            </LinearLayout>


        </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <com.cuboid.cuboidcirclebutton.CuboidButton
            android:layout_width="150dp"
            android:id="@+id/bookappointment"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            app:cub_border_color="#000"
            app:cub_border_radius="4dp"
            android:layout_gravity="center"
            app:cub_color="#fafafa"
            app:cub_riple_effect="true"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/appoinment_schedule"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>
            <TextView
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="9dp"
                android:text="Book an"/>
            <TextView

                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="Appointment"/>
        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.cuboid.cuboidcirclebutton.CuboidButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/doctorschedule"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                app:cub_border_color="#000"
                app:cub_border_radius="4dp"
                android:layout_gravity="center"
                app:cub_color="#f1f1f1"
                app:cub_riple_effect="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/appoinment_schedule"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="7dp"
                    android:textColor="#000"
                    android:text="Doctor's"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    android:textColor="#000"
                    android:text="Schedule"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.cuboid.cuboidcirclebutton.CuboidButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:id="@+id/appointmentschedule"
                app:cub_border_color="#000"
                app:cub_border_radius="4dp"
                android:layout_gravity="center"
                app:cub_color="#f1f1f1"
                app:cub_riple_effect="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/appoinment_schedule"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"/>

                <TextView
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="11dp"
                    android:text="Appointments"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.cuboid.cuboidcirclebutton.CuboidButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/prevappointments"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                app:cub_border_color="#000"
                app:cub_border_radius="4dp"
                android:layout_gravity="center"
                app:cub_color="#f1f1f1"
                app:cub_riple_effect="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/appoinment_schedule"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"/>
                <TextView
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="7dp"
                    android:text="History of"/>
                <TextView
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    android:text="Appointments"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>




